:host {
  display: block;
}

/* Layout wrapper */
#wrapper {
  display: flex;
  min-height: 100vh;
}

/* Sidebar defaults */
#sidebar-wrapper {
  width: 250px;
  min-height: 100vh;
  background: #0d6efd; /* primary */
  color: #fff;
  transition: margin 0.3s ease;
}

/* Collapsed state on wrapper toggled */
#wrapper.toggled #sidebar-wrapper {
  margin-left: -250px;
}

/* Page content */
#page-content-wrapper {
  flex: 1;
  background: #f8f9fa;
  min-height: 100vh;
}

/* Responsive behavior */
@media (max-width: 991.98px) {
  #sidebar-wrapper {
    margin-left: -250px;
  }
  #wrapper.toggled #sidebar-wrapper {
    margin-left: 0;
  }
}





