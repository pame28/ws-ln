using System;
using System.Collections.Generic;
using System.IO;
using System.Web;
using Newtonsoft.Json;

namespace wsListasNegras.respuestaAutomatica
{
    public static class RespuestasAutomaticasConfig
    {
        private static readonly string ConfigPath = 
            HttpContext.Current.Server.MapPath("~/Config/escenarios.json");

        public static List<EscenarioRespuesta> GetEscenarios()
        {
            try
            {
                string json = File.ReadAllText(ConfigPath);

                var wrapper = JsonConvert.DeserializeObject<Wrapper>(json);

                return wrapper?.Escenarios ?? new List<EscenarioRespuesta>();
            }
            catch
            {
                return new List<EscenarioRespuesta>();
            }
        }

        private class Wrapper
        {
            public List<EscenarioRespuesta> Escenarios { get; set; }
        }
    }
}

