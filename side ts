import { Component, Output, EventEmitter } from '@angular/core';

@Component({
  selector: 'app-side-bar',
  templateUrl: './side-bar.component.html',
  styleUrls: ['./side-bar.component.css']
})
export class SideBarComponent {
  @Output() sidebarToggled = new EventEmitter<boolean>();
  
  isCollapsed = false;
  
  // Menú básico - puedes modificarlo según tus rutas reales
  menuItems = [
    { label: 'Inicio', icon: 'fa-home', link: '/home', exact: true },
    { label: 'Dashboard', icon: 'fa-chart-line', link: '/dashboard' },
    { label: 'Usuarios', icon: 'fa-users', link: '/users' },
    { label: 'Configuración', icon: 'fa-cog', link: '/settings' },
    { label: 'Ayuda', icon: 'fa-question-circle', link: '/help' }
  ];

  constructor() {
    // Inicializar estado del sidebar desde localStorage
    const savedState = localStorage.getItem('sidebar-collapsed');
    if (savedState) {
      this.isCollapsed = savedState === 'true';
    }
  }

  toggleSidebar() {
    this.isCollapsed = !this.isCollapsed;
    this.sidebarToggled.emit(this.isCollapsed);
    localStorage.setItem('sidebar-collapsed', this.isCollapsed.toString());
  }
}